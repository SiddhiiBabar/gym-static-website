pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SiddhiiBabar/gym-static-website.git'
            }
        }

        stage('Deploy to Apache') {
            steps {
                sh '''
                sudo rm -rf /var/www/html/*
                sudo cp -r * /var/www/html/
                '''
            }
        }
    }
}
